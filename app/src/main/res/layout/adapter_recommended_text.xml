<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    android:id="@+id/CardRoot">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/backgroundHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/titleDivider"
            />

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical"
            app:layout_constraintRight_toRightOf="@id/right_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile_black_24dp"/>

        <TextView
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:id="@+id/profileNameAndAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Name], [Age]"
            app:layout_constraintTop_toBottomOf="@id/profilePicture"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical"
            app:layout_constraintBottom_toTopOf="@id/RecommendedTeach"
            />

        <ImageView
            android:id="@+id/speaks_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_language_black_24dp"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical"
            app:layout_constraintTop_toBottomOf="@id/profileNameAndAge"
            app:layout_constraintBottom_toBottomOf="@id/RecommendedTeach"

            />

        <TextView
            android:id="@+id/RecommendedTeach"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/profileNameAndAge"
            app:layout_constraintLeft_toRightOf="@id/speaks_icon"
            app:layout_constraintBottom_toBottomOf="@id/speaks_icon"
            android:textColor="@color/colorDarkGrey"
            android:text="@string/recommended_lang0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/hobbies_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_whatshot_black_24dp"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical"
            app:layout_constraintTop_toBottomOf="@id/speaks_icon"
            app:layout_constraintBottom_toBottomOf="@id/profileHobbies"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/profileHobbies"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/RecommendedTeach"
            app:layout_constraintLeft_toRightOf="@id/speaks_icon"
            app:layout_constraintBottom_toBottomOf="@id/hobbies_icon"
            android:textColor="@color/colorDarkGrey"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Interests"
            />



        <View
            android:id="@+id/titleDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGary"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/profileHobbies"
            />

        <TextView
            android:id="@+id/profileBio"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/left_vertical"
            app:layout_constraintRight_toLeftOf="@id/right_vertical"
            app:layout_constraintTop_toBottomOf="@id/titleDivider"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum quis ultricies nibh. Donec efficitur aliquam odio ut efficitur. Mauris imperdiet vel mi non venenatis. In at posuere felis, quis tempus massa. Quisque non arcu id nunc suscipit iaculis eget ac turpis. Phasellus ultricies suscipit augue, quis placerat ligula efficitur eu. Proin id viverra metus. "
            />

        <TextView
            android:id="@+id/RecommendedLearn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wants to learn"
            app:layout_constraintTop_toBottomOf="@id/profileBio"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical"
            app:layout_constraintRight_toRightOf="@id/right_vertical"
            android:layout_marginTop="20dp"
            />

        <!--<ImageButton
            android:id="@+id/Recommended_Clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:tint="@color/colorWhite"
            android:background="@color/colorDarkGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/Recommended_Check"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageButton
            android:id="@+id/Recommended_Check"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/Recommended_Clear"
            />-->

        <android.support.constraint.Guideline
            android:id="@+id/left_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"
            />

        <android.support.constraint.Guideline
            android:id="@+id/right_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>